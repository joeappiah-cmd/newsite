<!DOCTYPE html>
<html>

<head>
	<title>Lego Collection</title>
	<meta charset="UTF-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/theme.css">
	<link rel="stylesheet" href="path/to/bootstrap.css">
    
    

</head>

<body>
    <%- include('partials/navbar', {page: '/addSet'}) %>

	<div class="container">
		<div class="row">
			<main class="col-md-12">

                <section class="bg-light text-center py-5">
                    <div class="container">
                        <h1 class="display-5 fw-bold">Add Set</h1>
                        <p class="lead text-muted">See the below form to add a new Lego Set to the collection</p>
                    </div>
                </section>
                <form action="/lego/addSet" method="post">

                    <div class="row g-3">
                        <div class="col-md-6 col-lg-4">
                            <div class="mb-3">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" id="name" name="name" required="" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="year" class="form-label">Year</label>
                                <input type="number" id="year" name="year" required="" class="form-control">
                            </div>
                        </div>

                        <div class="col-md-6 col-lg-4">
                            <div class="mb-3">
                                <label for="num_parts" class="form-label">Number of Parts</label>
                                <input type="number" id="num_parts" name="num_parts" required="" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="img_url" class="form-label">Image URL</label>
                                <input type="url" id="img_url" name="img_url" required="" class="form-control">
                            </div>
                        </div>

                        <div class="col-md-6 col-lg-4">
                            <div class="mb-3">
                                <label for="theme_id" class="form-label">Theme</label>
                                <select id="theme_id" name="theme_id" required="" class="form-select">
                                    <% themes.forEach(theme => { %>
                                        <option value="<%= theme.id %>">
                                        <%= theme.name %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="set_num" class="form-label">Set Num</label>
                                <input type="text" id="set_num" name="set_num" required="" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary w-100">Add Set</button>
                    </div>

                </form>
			</main>
		</div>
	</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

</body>

</html>